
<div class="hmsplit left">


<div class="box welcome">
<h1>Manage Your Exercises</h1>
</div>


<div class="box hmdetails">
<h2>Personal Exercises</h2> 
<ul>
    <%@priv_exercises.each do |ex| %>
        <li> <%=ex.name%> (<%=ex.category%>) <br/>
        <%=link_to "(edit)", edit_ex_path(id: ex.id) %> 
        <%=link_to "(delete)", delete_exercise_path(id: ex.id) %>
        </li>
    <%end%>
</ul>
</div>

</div>


<div class="hmsplit right">

<div class="box hmdetails">

<h2>Add a new exercise</h2>

<%if flash[:message]%>
    <ul> <%flash[:message].each do |error| %> 
        <li style="color: red"> <%=error%> 
        </li>
        <%end%> 
    </ul>
<%end%> 

<%=form_for @exercise, url: '/exercises/create', method: :post do |f|%>
    <table width="100%"; padding="20px">
    <tr> 
     <td style="text-align:right">  <%=f.label :name%> </td>
        <td> <%=f.text_field :name%> </td>
    </tr>
    <tr>
     <td style="text-align:right">  <%=f.label :category%> </td>
    <td><%=f.text_field :category%> </td>
    </tr>
    <tr><td> </td> <td><%=f.submit%></td></tr>
    </table>
<%end%>

</div>

<div class="box hmdetails">
<h2>Public Exercises</h2> 
<ul>
    <%@pub_exercises.each do |ex| %>
        <li> <%=ex.name%> (<%=ex.category%>) 
        </li>
    <%end%>
</ul> 
</div>
</div>
