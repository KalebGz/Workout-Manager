<h1>Make a new user account</h1> 

<% if flash[:message] %>
<ul>
    <%flash[:message].each do |message| %>
    <li style="color: red"><%=message%></li> 
    <%end%>
</ul>
<%end%> 

<%=form_for @user, url: '/signup', method: :post do |f| %>
    <%=f.label :name %>
    <%=f.text_field :name %>
    <br/>
    <%=f.label :email %>
    <%=f.text_field :email %>
    <br/>
    <%=f.label :password%>
    <%=f.password_field :password %>
    <br/>
    <%=f.label :password_confirmation %>
    <%=f.password_field :password_confirmation %>
    <br/>

    <%=f.submit "Sign up"%>
<%end%> 